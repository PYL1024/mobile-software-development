<view class="container">
  <!-- 地区选择器 -->
  <picker mode="region" bindchange="regionChange">
    <view>{{region}}</view>
  </picker>
  
  <!-- 温度和天气 -->
  <view class="temp-container">
    <temp-text>{{now.temp}}℃</temp-text>
    <weather-text>{{now.text}}</weather-text>
  </view>
  
  <!-- 天气图标 -->
  <image src="/images/weather_icon/{{now.icon}}.png" mode="widthFix"></image>
  
  <!-- 多行天气信息 -->
  <view class="detail">
    <view class="bar">
      <view class="box title">湿度</view>
      <view class="box title">气压</view>
      <view class="box title">能见度</view>
    </view>
    <view class="bar">
      <view class="box data">{{now.humidity}}%</view>
      <view class="box data">{{now.pressure}}hPa</view>
      <view class="box data">{{now.vis}}km</view>
    </view>
    
    <view class="divider"></view>
    
    <view class="bar">
      <view class="box title">风向</view>
      <view class="box title">风速</view>
      <view class="box title">风力</view>
    </view>
    <view class="bar">
      <view class="box data">{{now.windDir}}</view>
      <view class="box data">{{now.windSpeed}}km/h</view>
      <view class="box data">{{now.windScale}}级</view>
    </view>
  </view>
</view>